---
const {
  label,
  name,
  type = 'text',
  placeholder = '',
} = Astro.props;
---
<div class="flex flex-col">
  <label for={name} class="font-medium mb-1 text-teal-800">{label}</label>
  <input
    id={name}
    name={name}
    type={type}
    placeholder={placeholder}
    class="border border-gray-300 rounded-lg px-4 py-2
           focus:outline-none focus:ring-2 focus:ring-teal-400
           transition"
  />
</div>
