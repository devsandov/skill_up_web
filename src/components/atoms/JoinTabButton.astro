---
type Props = {
  type: string;
  text: string;
};

import { cn } from "@lib/utils/cn";
const { type, text } = Astro.props;
---
<button data-tab={type}
        class={cn(
          "px-4 py-2 rounded-t-lg font-medium text-gray-700 hover:text-teal-500 transition",
          "data-[active]:hover:text-white data-[active]:hover:bg-teal-300"
        )}
>
  {text}
</button>