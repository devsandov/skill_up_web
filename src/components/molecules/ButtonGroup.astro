---
import Button from '@atoms/Button.astro';
interface Action { label: string; href?: string; variant: 'primary' | 'outline'; }
const { actions } = Astro.props as { actions: Action[] };
---
<div class="flex flex-col space-y-4 sm:flex-row sm:space-y-0 sm:space-x-4">
  {actions.map((a) =>
    a.href
      ? <a href={a.href}><Button variant={a.variant}>{a.label}</Button></a>
      : <Button variant={a.variant}>{a.label}</Button>
  )}
</div>
