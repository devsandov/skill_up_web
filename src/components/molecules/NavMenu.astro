---
import NavLink from '@atoms/NavLink.astro';
interface NavItem { href: string; label: string }
const { items } = Astro.props as { items: NavItem[] }
---
<nav>
  <button
    id="nav-toggle"
    class="md:hidden p-2 text-2xl text-gray-700 focus:outline-none"
    aria-label="Toggle menu"
  >â˜°</button>

  <ul
    id="nav-menu"
    class="hidden absolute inset-x-0 top-full bg-white shadow-md z-40
           flex flex-col space-y-2 p-4 overflow-y-auto max-h-[80vh]
           md:static md:shadow-none md:flex md:flex-row md:space-y-0 md:space-x-6 md:p-0 md:max-h-auto"
  >
    {items.map(item => (
      <li><NavLink href={item.href}>{item.label}</NavLink></li>
    ))}
  </ul>

  <script is:inline>
    const btn  = document.getElementById('nav-toggle');
    const menu = document.getElementById('nav-menu');
    btn?.addEventListener('click', () => menu?.classList.toggle('hidden'));
  </script>
</nav>
