---
interface Props {
  planName: string;
  price: string;
  subtitle: string;
  benefits: string[];
  priceColor?: 'green' | 'teal' | 'blue';
}
const {
  planName,
  price,
  subtitle,
  benefits,
  priceColor = 'green',
} = Astro.props as Props;

const colorClasses = {
  green: 'text-green-500',
  teal:  'text-teal-500',
  blue:  'text-blue-500',
};
---
<article
  class="bg-white rounded-lg shadow-lg p-6 transform transition duration-300 hover:scale-105"
>
  <h4 class="text-lg font-semibold mb-1">{planName}</h4>
  <div class={`text-2xl font-bold mb-2 ${colorClasses[priceColor]}`}>
    {price}
  </div>
  <p class="text-gray-600 mb-4">{subtitle}</p>
  <ul class="list-disc list-inside space-y-1 text-gray-700">
    {benefits.map(item => <li>{item}</li>)}
  </ul>
</article>
