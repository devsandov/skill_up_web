---
interface Props {
  stat: string;
  title: string;
  description: string;
  variant?: 'red' | 'orange' | 'yellow';
}
const {
  stat,
  title,
  description,
  variant = 'red',
} = Astro.props as Props;
const colors = {
  red:    'border-red-500 bg-red-100 text-red-600',
  orange: 'border-orange-500 bg-orange-100 text-orange-600',
  yellow: 'border-yellow-500 bg-yellow-100 text-yellow-600',
};
---
<article
  class={`border-l-4 ${colors[variant]} rounded-lg p-6 transform transition duration-300 hover:scale-105`}
>
  <div class="mb-2">
    <span class="text-3xl font-bold">{stat}</span>
  </div>
  <h4 class="text-lg font-semibold mb-1">{title}</h4>
  <p class="text-gray-600 leading-relaxed">{description}</p>
</article>
