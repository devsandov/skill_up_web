---
const { number, title, description, isLast = false } = Astro.props;
---

<div class="step-card relative group h-full">
  <!-- Card content -->
  <div class="relative bg-white rounded-xl p-6 shadow-sm border border-gray-100 hover:shadow-md transition-all duration-300 hover:-translate-y-1 z-10 h-full">
    <!-- Step number -->
    <div class="flex items-center mb-4">
      <div class="w-10 h-10 flex items-center justify-center bg-gradient-to-br from-teal-400 to-teal-600 text-white rounded-full font-bold text-lg shadow-lg group-hover:scale-110 transition-transform duration-300">
        {number}
      </div>
      <div class="ml-3 h-px bg-gradient-to-r from-teal-200 to-transparent flex-1 lg:hidden"></div>
    </div>

    <!-- Content -->
    <div class="space-y-2">
      <h4 class="font-semibold text-lg text-teal-800 group-hover:text-teal-900 transition-colors duration-300">
        {title}
      </h4>
      <p class="text-gray-600 text-sm leading-relaxed">
        {description}
      </p>
    </div>

    <!-- Subtle accent -->
    <div class="absolute bottom-0 left-0 w-full h-1 bg-gradient-to-r from-teal-400 to-teal-600 rounded-b-xl opacity-0 group-hover:opacity-100 transition-opacity duration-300"></div>
  </div>
</div>

<style>
  .step-card:nth-child(even) .group:hover {
    transform: translateY(-2px) rotate(0.5deg);
  }

  .step-card:nth-child(odd) .group:hover {
    transform: translateY(-2px) rotate(-0.5deg);
  }
</style>
